{
  "include": ["src/**/*.ts"],

  "compilerOptions": {
    "outDir": "lib",

    "target": "es5",
    "module": "commonjs",

    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true
  }
}
